@model OrderView

<form asp-action="AddProductToSession"
      asp-controller="Home"
      data-ajax="true"
      data-ajax-method="POST"
      data-ajax-failure="Form.addProductOnFailure"
      data-ajax-success="Form.addProductOnSuccess"
      data-ajax-complete="Form.addProductOnComplete">
    
    @*Add product form*@
    <div class="EDITORS">

        <div class="row">
            <div class="col-12 text-center">
                <div>
                    <input asp-for="OrderKey" readonly="readonly" hidden="hidden" />
                </div>
            </div>
        </div>


        <div class="row pb-4">
            <div class="col-12 text-center">
                <div class="mb-4">
                    <div class="fs-4">Velikost obrazu</div>
                    <div><span asp-validation-for="AddProduct.ProductSize_Id"></span></div>
                </div>
                <div>
                    <icon-radio-for asp-for="AddProduct.ProductSize_Id" asp-items="Model.ProductSizeIconSelectList"></icon-radio-for>
                </div>
            </div>
        </div>

        <div class="row pb-4">
            <div class="col-12 text-center">
                <div class="mb-4">
                    <div class="fs-4">Rozložení obrazu</div>
                    <div><span asp-validation-for="AddProduct.ProductLayout_Id"></span></div>
                </div>
                <div>
                    <icon-radio-for asp-for="AddProduct.ProductLayout_Id" asp-items="Model.ProductLayoutIconSelectList"></icon-radio-for>
                </div>
            </div>
        </div>
    
        <div class="row pb-4">
            <div class="col-12 text-center">
                <div class="mb-4">
                    <div class="fs-4">Barva rámu obrazu</div>
                    <div><span asp-validation-for="AddProduct.ProductFrameColor_Id"></span></div>
                </div>
                <div>
                    <icon-radio-for asp-for="AddProduct.ProductFrameColor_Id" asp-items="Model.ProductFrameColorsIconSelectList"></icon-radio-for>
                </div>
            </div>
        </div>
    
        <div class="row pb-4">
            <div class="col-12 text-center">
                <div class="fs-4">Text výpalu</div>
                <div class="fst-italic">Výpal je vždy v pravém rohu</div>
            </div>
        </div>
    
        <div class="row">
            <div class="col-3">
                <div><label asp-for="AddProduct.Description"></label></div>
            </div>
            <div class="col-9">
                <textarea asp-for="AddProduct.Description" style="width: 100%"></textarea>
            </div>
        </div>

    </div>
    
    
    <div class="row mt-3">
        <div class="col-12 text-end">
            
            <span background-color="danger" title="Zrušit zadávání produktu">
                <icon name="cancel"/>&nbsp;<span>Zrušit zadávání</span>
            </span>

            <button background-color="primary" type="submit">
                <icon name="save" />&nbsp;<span>Přidat produkt</span>
            </button>

        </div>
    </div>

</form>